---
const steps = {
  stepsItems: ['Profile', 'Contact', 'Identity', 'Passport'],
  currentStep: 2,
}
---

<div class='max-w-2xl mx-auto px-4 md:px-0'>
  <ul aria-label='Steps' class='items-center text-gray-600 font-medium md:flex'>
    {
      steps.stepsItems.map((item, idx) => (
        <li
          aria-current={steps.currentStep == idx + 1 ? 'step' : false}
          class='flex gap-x-3 md:flex-col md:flex-1 md:gap-x-0'
        >
          <div class='flex flex-col items-center md:flex-row md:flex-1'>
            <hr
              class:list={[
                'w-full border hidden md:block',

                { 'border-none': idx == 0 },
                { 'border-indigo-600': steps.currentStep >= idx + 1 },
              ]}
            />
            <div
              class:list={[
                'w-8 h-8 rounded-full border-2 flex-none flex items-center justify-center',
                {
                  'bg-indigo-600 border-indigo-600':
                    steps.currentStep > idx + 1,
                },
                { 'border-indigo-600': steps.currentStep == idx + 1 },
              ]}
            >
              <span
                class:list={[
                  'w-2.5 h-2.5 rounded-full bg-indigo-600',
                  { hidden: steps.currentStep != idx + 1 },
                ]}
              />
              {steps.currentStep > idx + 1 ? (
                <svg
                  xmlns='http://www.w3.org/2000/svg'
                  fill='none'
                  viewBox='0 0 24 24'
                  stroke-width={1.5}
                  stroke='currentColor'
                  class='w-5 h-5 text-white'
                >
                  <path
                    stroke-linecap='round'
                    stroke-linejoin='round'
                    d='M4.5 12.75l6 6 9-13.5'
                  />
                </svg>
              ) : (
                ''
              )}
            </div>
            <hr
              class:list={[
                'h-12 border md:w-full md:h-auto',

                { 'border-none': idx + 1 == steps.stepsItems.length },
                { 'border-indigo-600': steps.currentStep > idx + 1 },
              ]}
            />
          </div>
          <div class='h-8 flex justify-center items-center md:mt-3 md:h-auto'>
            <h3
              class:list={[
                'text-sm',
                { 'text-indigo-600': steps.currentStep == idx + 1 },
              ]}
            >
              {item}
            </h3>
          </div>
        </li>
      ))
    }
  </ul>
</div>
